@model VegeFoods_MVC.Models.Partner

@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>

<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <img class="col-sm-12" src="~/images/@(Model.PartnerLogo)" />
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input accept="image/*" asp-for="ImageFile" class="form-control" data-val="false" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PartnerLogo" />
            <div class="my-3 form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a class="btn btn-warning btn-icon btn-sm mb-1" asp-action="Details" asp-route-id="@Model?.Id"><i class="bi bi-search"></i></a>
    <a class="btn btn-danger btn-icon btn-sm mb-1" asp-action="Delete" asp-route-id="@Model?.Id"><i class="bi bi-trash"></i></a>
    <a class="btn btn-primary btn-icon btn-sm mb-1" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
