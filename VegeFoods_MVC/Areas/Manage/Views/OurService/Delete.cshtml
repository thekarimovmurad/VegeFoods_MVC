@model VegeFoods_MVC.Models.OurService
<head>
    <link rel="stylesheet" href="~/css/flaticon.css">
</head>
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div>
    <h3>Are you sure you want to delete this?</h3>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SVGImage)
        </dt>
        <dd class = "col-sm-10">
            <span class="@Html.DisplayFor(model => model.SVGImage)"></span>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Subtitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Subtitle)
        </dd>
    </dl>
</div>

<div>
    <a class="btn btn-warning btn-icon btn-sm mb-1" asp-action="Edit" asp-route-id="@Model?.Id"><i class="bi bi-pencil"></i></a>
    <a class="btn btn-danger btn-icon btn-sm mb-1" asp-action="Delete" asp-route-id="@Model?.Id"><i class="bi bi-trash"></i></a>
    <a class="btn btn-primary btn-icon btn-sm mb-1" asp-action="Index">Back to List</a>
</div>
