@model VegeFoods_MVC.Models.AboutUs

@{
    ViewData["Title"] = "Index";
}

<h1>Index - About Us</h1>
<br />
<div>
    <a class="btn btn-warning btn-icon btn-sm  my-3" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
</div>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subtitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subtitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Video)
        </dt>
        <dd class="col-sm-10">
            <video class="col-sm-10" controls>
                <source src="~/video/@Html.DisplayNameFor(model => model.Image)" type="video/mp4">
            </video>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img class="col-sm-10" src="~/images/@Html.DisplayFor(model => model.Image)" />
        </dd>
    </dl>
</div>